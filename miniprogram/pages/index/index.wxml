<view class="section">
  <view class="flex-wrp" style = "flex-derection:row;">
    <view >
    <navigator url="../error/index">
    <image class = "flex-image" src = "../../images/error.png" mode = "aspectFit"></image><view class = "flex-text">错题集</view>
    </navigator>
    </view>
     <view ><navigator url="../rank/index"><image class = "flex-image" src = "../../images/top.png" mode = "aspectFit"></image><view class = "flex-text">榜单</view></navigator></view>
     <view >
     <navigator url="../success/index"><image class = "flex-image" src = "../../images/finish.png" mode = "aspectFit"></image><view class = "flex-text">已完成</view>
     </navigator></view>
  </view>
</view>

<view class="cover-view" wx:if = "{{coverView}}">
<view class="userinfo-avatar"><open-data type = "userAvatarUrl"></open-data></view>
<view class="view-text">逻辑题小程序需获取您的昵称、头像个人信息</view>
<view wx:if= "{{canIUse}}">
<button class="cancel-button" bindtap = "cancelAuth">取消</button>
<button class="view-button"  open-type = "getUserInfo" bindgetuserinfo = "bindGetUserInfo">授权</button>
</view>
<view wx:else>微信版本过低，请升级</view>
</view>
<view wx:if = "{{!auth && !coverView}}">
    <button class="login-button" bindtap = "openAuth">点击登录</button>
</view>
<view class="title">题目</view>
<view class = "list-body">
  <block wx:for="{{questionList}}" wx:key="_id">
    <navigator class="navigator-block"  url="../question/detail?id={{item._id}}&type=all">
     <view class="question-redirect">{{item.question}}</view>
     <view class="list-detail" wx:if = "{{!coverView}}"></view>
    </navigator>
  </block>
</view>

<view class="no-more">
      <view wx:if="{{noMore}}">我们是有底线的呦～</view>
</view>