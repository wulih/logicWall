 page {
    color: #666;
    font-size:14px;
    background-color: #f8f8f8;
    transform: none;
  }

  .page__hd {
      text-indent: 2em;
      background-color: #fff;
      padding-top:15px; 
  }

  .page__desc {
      width: 95%;
      margin-right: auto; 
      margin-left: auto;
      display: inline-block;
  }

  .page__bd {
    background-color: #fff;
  }
  .page_foot{ 
    display: flex;
    display: -webkit-flex; 
    flex-flow: row inwrap;
    justify-content: space-around;
    width: 100%;
    z-index: 888;
    background-color:#f8f8f8;
    text-align: center;
    position:fixed;
    bottom:0;
  }
  .flex-image{
    width: 40px;
    height: 20px;
    margin-bottom: 10px; 
    margin-top: 10px;
  }

.my-checkbox:checked {  
  border: 1px solid #fe0002;  
  color: #fe0002;  
  background: #fff;  
} 

.weui-cell.checkright {
  border: 1px solid #fff;
  background-color: rgba(11, 168, 11, 0.9);
  border-radius: 40px;
}

.weui-cell.error {
  border: 1px solid #fff;
  background-color: rgba(255, 0, 0, 0.9);
  border-radius: 40px;
}
.page_error{
  margin-top: 10px;
  width: 95%;
  margin-right: auto; 
  margin-left: auto;
}
.page_error_title{
  font-size: 14px;
  font-weight: bold;
  color: rgb(0, 0, 0);
}
.page_error_desc{
  text-indent: 2em;
}

.cover-view {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: block;
  background: rgba(133, 129, 129, 0.5);
}
.view-text {
  color: #FFFFFF;
  text-align: center;
  width: 80%;
  margin-right: auto; 
  margin-left: auto; 
}
.view-button {
  top: 15px;
  background: #FF4343;
  border: 1px solid #FF4343;
  box-shadow: 0 2px 12px 0 rgba(255,67,67,0.45);
  border-radius: 45px;
  font-size: 20px;
  color: #FFFFFF;
  letter-spacing: 0;
  width: 45%;
  display: inline-block;
}

.cancel-button {
  top: 15px;
  background: rgb(224, 223, 223);
  box-shadow: 0 2px 12px 0 rgba(230, 226, 226, 0.45);
  border-radius: 45px;
  font-size: 20px;
  color: #FFFFFF;
  letter-spacing: 0;
  width: 45%;
  display: inline-block;
  margin-left: 5%; 
}

.userinfo-avatar {
  width: 150px;
  height:150px;
  border-radius: 50%;
  margin-top:20%;
  margin-bottom:20rpx;
  margin-right: auto; 
  margin-left: auto; 
}
